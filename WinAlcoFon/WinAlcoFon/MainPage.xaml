<Page
    xmlns:Charting="using:WinRTXamlToolkit.Controls.DataVisualization.Charting"
    x:Class="WinAlcoFon.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinAlcoFon"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Grid Background="DarkOrange">
        <Charting:Chart x:Name="LineChart" HorizontalAlignment="Left" Margin="-5,0,-95,0" VerticalAlignment="Top" Width="455" Height="200">
            <Charting:LineSeries Margin="0" IndependentValuePath="id" DependentValuePath="wartosc"/>
        </Charting:Chart>
        <Button x:Name="Odswiez" Content="Start" HorizontalAlignment="Left" Margin="10,210,0,0" VerticalAlignment="Top" Click="Odswiez_Click" Width="75" Height="45"/>
        <Button x:Name="Zatrzymaj" Content="Stop" HorizontalAlignment="Right" Margin="0,210,10,0" VerticalAlignment="Top" Click="Zatrzymaj_Click" Width="75" Height="45"/>
        <TextBlock x:Name="CiaglyOdczyt" HorizontalAlignment="Center" Margin="0,210,0,0" TextWrapping="Wrap" Text="Ciągły odczyt" VerticalAlignment="Top"/>
    </Grid>
</Page>
